<header class="masthead" style="background-image: url(<%= @first_post_image %>)">
  <div class="overlay"></div>
  <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= @post.title %></h1>

              <span class="meta">Posted by>
                <span class="author">
                  <%= @post.user.name %>
                </span>
                <%= @post.created_at.strftime("%Y-%m-%d") %>
              </span>

              <% unless @post.active? %>
                <br>
                <span class="meta">Not published on home page</span>
              <% end %>
          </div>
        </div>
      </div>
  </div>
</header>
  <p id="notice"><%= notice %></p>
  <% if current_user && @post.user_id == current_user.id %>
    <div class="text-center show-icons">
      <%= link_to '', edit_post_path(@post), class: "fas fa-edit" %>
      <%= link_to '', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: "fas fa-trash" %>
    </div>
  <% end %>

  <article>
    <div class="container">

      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%= @post.body %></p>
        </div>
      </div>

      <hr>
      <div class="row">
        <% @post.images.each do |image| %>

        <div class="col-lg-4 col-md-4 col-xs-4 thumb post_show_image">
         <%= image_tag(image, :class => "img-responsive") %>
        </div>
      <% end %>

      </div>

    </div>
  </article>


