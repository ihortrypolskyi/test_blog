<header class="masthead" style="background-image: url('images/home-bg.jpg')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1>Test Blog</h1>
          <span class="subheading">for Sloboda studio</span>
        </div>
      </div>
    </div>
  </div>
</header>

<p id="notice"><%= notice %></p>
  <!-- Main Content -->
  <div class="container">

    <div class="row">
      <div id="current_user_posts"></div>
      <div class="col-lg-8 col-md-10 mx-auto" id="all_posts">
        <div class="buttons-block text-center">
          <% if user_signed_in? %>
            <%= link_to "#{current_user.name}'s POSTS", current_user_posts_posts_path, id: "current_user_posts_button",class: "btn btn-secondary", remote: true, onclick: "loadCurrentUserPosts()" %>

            <%= link_to 'New Post', new_post_path, class: "btn btn-secondary" %>
          <% else %>
                <div class="col-md-12 text-left">
                  Please, login to to write new post.
                </div>
          <% end %>
        </div>

        <% @posts.each do |post| %>
          <div class="post-preview">
            <%= link_to post do %>
              <h2 class="post-title">
               <%= post.title %>
              </h2>
              <h3 class="post-subtitle">
                <%= truncate(strip_tags(post.body.to_s), length: 150) %>
              </h3>
            <% end %>
            <div class="post-meta">
              <div class="row">
                <div class="col-md-6 text-left">
                  Posted by <span class="author"><%= post.user.name %></span>
                  <%= post.created_at.strftime("%Y-%m-%d") %>
                </div>

                <% if current_user && post.user_id == current_user.id %>
                  <div  class="col-md-6 text-right icons">
                    <%= link_to '', post, class: "fas fa-eye" %>
                    <%= link_to '', edit_post_path(post), class: "fas fa-edit" %>
                    <%= link_to '', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "fas fa-trash" %>
                  </div>
                <% end %>
              </div>
            </div>
            <hr>
          </div>
        <% end %>
      </div>
    </div>
  </div>


